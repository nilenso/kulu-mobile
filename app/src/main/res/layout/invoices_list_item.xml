<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="askdjaksdjkasjdk"
        android:id="@+id/invoice_file_name">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/invoice_file_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12sp"
        android:textColor="#ff74819c"
        android:text="asdasdsad"
        android:id="@+id/invoice_file_timestamp">
    </TextView>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:padding="2dp"
        android:src="@drawable/ic_launcher"
        android:id="@+id/invoice_file_thumb">
    </ImageView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/invoice_file_thumb"
        android:layout_toStartOf="@id/invoice_file_thumb"
        android:text="u"
        android:id="@+id/upload_button"/>

</RelativeLayout>
